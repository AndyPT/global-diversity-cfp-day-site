<div class="jumbotron">
  <% if volunteer.picture_url.present? %>
    <%= image_tag volunteer.picture_url, width: '150px', height: '150px' %>
    <br/>
  <% end %>
  Name: <%= volunteer.full_name %>
  <br/>
  <% if volunteer.run_workshop_explaination.present? %>
    Bio: <%= volunteer.biography %>
  <% end %>
  <br/>
  <% if volunteer.run_workshop_explaination.present? %>
    Involvement: <%= volunteer.run_workshop_explaination %>
  <% end %>
  <br/>
  <% if volunteer.displayed_twitter.present? %>
    Twitter: <%= link_to volunteer.displayed_twitter, twitter_url(volunteer), target: "_blank" %>
  <% end %>
  <br/>
</div>
