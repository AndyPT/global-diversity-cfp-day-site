<div class="jumbotron volunteer">

  <div class="container ">
    <div class="row">
      <div class="col col-sm-4">
        <% if volunteer.picture_url.present? %>
          <div class="col">
            <%= image_tag volunteer.picture_url, class: 'volunteer--profile-picture' %>
          </div>
        <% end %>
      </div>

      <div class="col col-sm-7 justify-content-sm-center volunteer--details">
        <div class="volunteer-name"><%= volunteer.full_name %></div>
        <br/>
        <%= volunteer.run_workshop_explaination if volunteer.run_workshop_explaination.present? %>
        <br/>
        <br/>
        Bio: <%= volunteer.biography if volunteer.run_workshop_explaination.present? %>
      </div>

      <div class="col col-sm-1 ">
        <a href="<%= twitter_url(volunteer) %>" target="_blank" class="volunteer-twitter">
          <i class="twitter"></i>
          <span class="sr-only">Follow <%= volunteer.full_name %> on Twitter</span>
        </a>
      </div>
    </div>
  </div>

</div>
